    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "sass": "^1.69.5",
    "semver": "^7.5.4",
    "sharp": "0.32.6",
    "swr": "^2.2.4",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
