    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@runtipi/postgres-migrations": "^5.3.0",
    "@runtipi/shared": "workspace:^",
    "@tabler/core": "1.0.0-beta20",
    "@tabler/icons-react": "^2.40.0",
    "argon2": "^0.31.1",
    "bullmq": "^4.13.0",
